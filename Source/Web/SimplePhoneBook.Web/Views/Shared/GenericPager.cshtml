@using SimplePhoneBook.Web.ViewModels.Shared;
@model PagerViewModel

@{ 
    string controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    string actionName = this.ViewContext.RouteData.Values["action"].ToString();
    string pagerLinkTemplate = "/" + controllerName + "/" + actionName + "?";
}

<ul class="pagination">
    @for (int i = 0; i < Model.PagesCount; i++)
    {
        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
            <a class="page-link" href="@(pagerLinkTemplate)@(Model.Prefix).CurrentPage=@(i)">@(i + 1)</a>
        </li>
    }
</ul>

<p>@Model.ItemsPerPage items per page</p>
